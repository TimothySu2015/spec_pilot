{
  "name": "@specpilot/validation",
  "version": "0.1.0",
  "description": "Schema and custom validation engine for SpecPilot",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@specpilot/config": "workspace:*",
    "@specpilot/shared": "workspace:*",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.0"
  }
}