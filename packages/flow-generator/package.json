{
  "name": "@specpilot/flow-generator",
  "version": "0.2.0",
  "description": "Conversational flow generator for SpecPilot - Generate test flows from natural language",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@specpilot/shared": "workspace:*",
    "@specpilot/spec-loader": "workspace:*",
    "@specpilot/flow-parser": "workspace:*",
    "@specpilot/schemas": "workspace:*",
    "yaml": "^2.4.3"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.6.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.0"
  }
}
