{
  "name": "@specpilot/spec-loader",
  "version": "0.1.0",
  "description": "OpenAPI specification loader for SpecPilot",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "test": "vitest",
    "dev": "tsup --watch"
  },
  "dependencies": {
    "@specpilot/shared": "workspace:*",
    "@apidevtools/swagger-parser": "^10.1.0",
    "yaml": "^2.4.3"
  },
  "devDependencies": {
    "zod": "^3.23.0",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "rimraf": "^5.0.0"
  }
}