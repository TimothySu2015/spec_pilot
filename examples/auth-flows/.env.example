# SpecPilot 認證設定範例
# 複製此檔案為 .env.local 並填入實際的 Token 值

# =================================================================
# 基本設定
# =================================================================

# API 基礎 URL
SPEC_PILOT_BASE_URL=https://api.example.com

# API 埠號（選填，預設根據協定自動判斷）
SPEC_PILOT_PORT=443

# =================================================================
# 認證設定
# =================================================================

# 預設 Token 過期時間（秒）
SPEC_PILOT_AUTH_DEFAULT_EXPIRY=3600

# 認證失敗時自動重試的命名空間（逗號分隔）
SPEC_PILOT_AUTH_RETRY_ON_FAILURE=api_gateway,payment_service

# =================================================================
# 服務 Token 設定
# =================================================================

# 使用者服務 API Token
SPEC_PILOT_TOKEN_USER_SERVICE=your_user_service_token_here

# 支付服務 API Token
SPEC_PILOT_TOKEN_PAYMENT_SERVICE=your_payment_service_token_here

# 外部 API Token
SPEC_PILOT_TOKEN_EXTERNAL=your_external_api_token_here

# API Gateway Token
SPEC_PILOT_TOKEN_API_GATEWAY=your_api_gateway_token_here

# OAuth 客戶端憑證（Base64 編碼的 client_id:client_secret）
OAUTH_CLIENT_CREDENTIALS=your_base64_encoded_client_credentials

# =================================================================
# 特定服務設定
# =================================================================

# 第三方整合服務
SPEC_PILOT_TOKEN_INTEGRATION_SERVICE=your_integration_token_here

# 分析服務 Token
SPEC_PILOT_TOKEN_ANALYTICS=your_analytics_token_here

# 通知服務 Token
SPEC_PILOT_TOKEN_NOTIFICATION=your_notification_token_here

# 檔案儲存服務 Token
SPEC_PILOT_TOKEN_STORAGE=your_storage_token_here

# =================================================================
# 開發與測試環境設定
# =================================================================

# 測試環境 API Token
SPEC_PILOT_TOKEN_TEST_API=test_api_token_here

# 開發環境內部服務 Token
SPEC_PILOT_TOKEN_DEV_INTERNAL=dev_internal_token_here

# Mock 服務 Token（用於測試）
SPEC_PILOT_TOKEN_MOCK_SERVICE=mock_service_token_here

# =================================================================
# 範例說明
# =================================================================
#
# Token 命名規則：
# SPEC_PILOT_TOKEN_<NAMESPACE>
#
# 其中 NAMESPACE 會自動轉換為小寫，例如：
# SPEC_PILOT_TOKEN_USER_SERVICE → namespace: "user_service"
# SPEC_PILOT_TOKEN_API_GATEWAY → namespace: "api_gateway"
#
# 在 Flow YAML 中使用：
# auth:
#   type: static
#   namespace: "user_service"  # 對應 SPEC_PILOT_TOKEN_USER_SERVICE
#
# 或在全域設定中：
# auth:
#   static:
#     - namespace: "external_api"
#       token: "${SPEC_PILOT_TOKEN_EXTERNAL}"
#       expiresInSeconds: 7200