{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@specpilot/core-flow": ["packages/core-flow/src"],
      "@specpilot/config": ["packages/config/src"],
      "@specpilot/shared": ["packages/shared/src"],
      "@specpilot/testing": ["packages/testing/src"],
      "@specpilot/spec-loader": ["packages/spec-loader/src"],
      "@specpilot/flow-parser": ["packages/flow-parser/src"],
      "@specpilot/http-runner": ["packages/http-runner/src"],
      "@specpilot/validation": ["packages/validation/src"],
      "@specpilot/reporting": ["packages/reporting/src"]
    }
  },
  "include": [
    "apps/*/src/**/*",
    "packages/*/src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}