{
  "openapi": "3.0.0",
  "info": {
    "title": "Simple API",
    "version": "1.0.0",
    "description": "簡單的測試 API"
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "健康檢查",
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "成功回應",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Status": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}